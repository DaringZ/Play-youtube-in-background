<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    tools:context=".GetPermission">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme3.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent31"
            app:popupTheme="@style/AppTheme3.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <TextView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#737373"
        android:textStyle="bold"
        android:text="@string/string_get_permission"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_get_permission"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent31"
        android:textColor="@color/colorAccent11"
        android:text="@string/getPermission_btn_desc"
        android:textStyle="bold"
        android:textAllCaps="false"
        />


</LinearLayout>